<project default="build" basedir="../../..">
  <property name="js.src" location="build/ts" />
  <property name="web" location="src/main/webapp" />
  <target name="build">
    <echo message="${js.src}"/>
    <echo message="${web}"/>
    <concat destfile="${web}/assets/wsproj-client.js">
      <fileset dir="${js.src}/client">
        <include name="**/*.js" />
      </fileset>
    </concat>
    <concat destfile="${web}/WEB-INF/ts/wsproj-server.js">
      <fileset dir="${js.src}/server">
        <include name="**/*.js" />
      </fileset>
    </concat>
  	<eclipse.refreshLocal resource="wsproj" depth="infinite"/>
  </target>
</project>
